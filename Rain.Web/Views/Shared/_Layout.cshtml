<!DOCTYPE html>
@inject Microsoft.Extensions.Localization.IStringLocalizer<Rain.Web.SharedResource> L
@{
    var culture = System.Globalization.CultureInfo.CurrentUICulture.TwoLetterISOLanguageName;
}
@{
    var dir = culture == "ar" ? "rtl" : "ltr";
}
<html lang="@culture" dir="@dir">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Rain.Web</title>
    <link rel="icon" type="image/png" href="/images/logo.png" />
    <link rel="apple-touch-icon" href="/images/logo.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/auth.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Rain.Web.styles.css" asp-append-version="true" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="/images/logo.png" alt="@L["AppName"]" height="28" class="me-2" />
                    <span class="fw-semibold">@L["AppName"]</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">@L["Home"]</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Products" asp-action="Index">@L["Products"]</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="Supplier" asp-controller="Offers" asp-action="Index">@L["Supplier"]</a>
                        </li>
                    </ul>
                    <div class="d-flex align-items-center">
                        @await Html.PartialAsync("_LoginPartial")
                    </div>
                    <div class="d-flex ms-2 align-items-center">
                        <button type="button" id="themeToggle" class="btn btn-sm btn-outline-secondary me-2">@L["Theme"]</button>
                        <a class="btn btn-sm btn-outline-secondary me-2" href="?culture=ar&ui-culture=ar">العربية</a>
                        <a class="btn btn-sm btn-outline-secondary" href="?culture=en&ui-culture=en">English</a>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <partial name="_Alerts" />
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - @L["AppName"] - <a asp-area="" asp-controller="Home" asp-action="Privacy">@L["Privacy"]</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
