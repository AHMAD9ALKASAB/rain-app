{
  "Payment": {
    "Provider": "Stripe",
    "Currency": "USD"
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=<CHANGE_ME>;Database=RainDb;User Id=<DB_USER>;Password=<DB_PASSWORD>;Encrypt=True;TrustServerCertificate=False"
  },
  "Stripe": {
    "ApiKey": "<STRIPE_SECRET_KEY>",
    "WebhookSecret": "<STRIPE_WEBHOOK_SECRET>"
  },
  "Email": {
    "Sender": "noreply@rain-platform.com",
    "SenderName": "Rain Platform",
    "Smtp": {
      "Host": "<SMTP_HOST>",
      "Port": 587,
      "Username": "<SMTP_USER>",
      "Password": "<SMTP_PASSWORD>",
      "UseSsl": true
    }
  },
  "FileStorage": {
    "Provider": "Local",
    "BasePath": "wwwroot"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}
