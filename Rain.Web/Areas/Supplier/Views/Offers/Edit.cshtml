@using Rain.Domain.Entities
@model SupplierOffer
@{
    ViewData["Title"] = "تعديل عرض";
}
<div class="container py-3">
    <h3 class="mb-3">تعديل عرض</h3>
    <form method="post">
        @Html.AntiForgeryToken()
        <div class="mb-3">
            <label class="form-label">المنتج</label>
            <select asp-for="ProductId" class="form-select" asp-items="ViewBag.Products"></select>
        </div>
        <div class="row g-2">
            <div class="col-md-4">
                <label class="form-label">السعر</label>
                <input asp-for="Price" class="form-control" />
            </div>
            <div class="col-md-4">
                <label class="form-label">الحد الأدنى</label>
                <input asp-for="MinOrderQty" class="form-control" />
            </div>
            <div class="col-md-4">
                <label class="form-label">المخزون</label>
                <input asp-for="StockQty" class="form-control" />
            </div>
        </div>
        <div class="form-check mt-3">
            <input class="form-check-input" asp-for="IsActive" />
            <label class="form-check-label" asp-for="IsActive">مفعل</label>
        </div>
        <div class="mt-3">
            <button class="btn btn-primary">حفظ</button>
            <a class="btn btn-secondary" href="@Url.Action("Index")">رجوع</a>
        </div>
    </form>
</div>
