@using Rain.Domain.Entities
@model Order
@{
    ViewData["Title"] = $"تفاصيل الطلب #{Model.Id}";
}
<div class="container py-3">
    <h3 class="mb-3">تفاصيل الطلب #@Model.Id</h3>
    <div class="row g-3">
        <div class="col-md-6">
            <div><strong>التاريخ:</strong> @Model.CreatedAt.ToLocalTime().ToString("yyyy/MM/dd HH:mm")</div>
            <div><strong>الحالة:</strong> @Model.Status</div>
            <div><strong>الإجمالي:</strong> @Model.Total.ToString("0.00")</div>
        </div>
        <div class="col-md-6">
            <div><strong>عنوان الشحن:</strong> @Model.ShippingAddress?.Line1, @Model.ShippingAddress?.City</div>
        </div>
    </div>
    <hr />
    <h5>العناصر</h5>
    <div class="table-responsive">
        <table class="table table-sm align-middle">
            <thead>
                <tr>
                    <th>المنتج</th>
                    <th>السعر</th>
                    <th>الكمية</th>
                    <th>الإجمالي</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var i in Model.Items)
            {
                <tr>
                    <td>@i.SupplierOffer?.Product?.Name</td>
                    <td>@i.UnitPrice.ToString("0.00")</td>
                    <td>@i.Quantity</td>
                    <td>@(i.UnitPrice * i.Quantity).ToString("0.00")</td>
                </tr>
            }
            </tbody>
        </table>
    </div>
    @if (Model.Status == Rain.Domain.Enums.OrderStatus.Shipped)
    {
        <form method="post" asp-action="ConfirmDelivery" asp-route-id="@Model.Id" class="mt-3">
            @Html.AntiForgeryToken()
            <button class="btn btn-success">تأكيد الاستلام</button>
        </form>
    }
    <a class="btn btn-secondary" href="@Url.Action("Index")">رجوع</a>
</div>
