@using Rain.Domain.Entities
@model Review
@{
    ViewData["Title"] = "إضافة تقييم";
}
<div class="container py-3">
    <h3 class="mb-3">إضافة تقييم</h3>
    <form method="post">
        @Html.AntiForgeryToken()
        <div class="mb-3">
            <label class="form-label">التقييم (1-5)</label>
            <input asp-for="Rating" class="form-control" type="number" min="1" max="5" />
            <span asp-validation-for="Rating" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label class="form-label">تعليق</label>
            <textarea asp-for="Comment" class="form-control"></textarea>
        </div>
        <div>
            <button class="btn btn-primary">حفظ</button>
            <a class="btn btn-secondary" href="@Url.Action("Index","Orders", new { area = "User" })">رجوع</a>
        </div>
    </form>
</div>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
