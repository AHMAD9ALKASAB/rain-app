@{
    ViewData["Title"] = "لوحة التحكم";
}
<div class="container py-3">
    <h3 class="mb-3">لوحة تحكم المدير</h3>
    <div class="row g-3">
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <div class="text-muted">المستخدمون</div>
                    <div class="display-6">@ViewBag.UsersCount</div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <div class="text-muted">المنتجات</div>
                    <div class="display-6">@ViewBag.ProductsCount</div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <div class="text-muted">العروض</div>
                    <div class="display-6">@ViewBag.OffersCount</div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <div class="text-muted">الطلبات</div>
                    <div class="display-6">@ViewBag.OrdersCount</div>
                </div>
            </div>
        </div>
    </div>
</div>
