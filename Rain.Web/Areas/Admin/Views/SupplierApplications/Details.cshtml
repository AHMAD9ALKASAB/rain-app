@model Rain.Domain.Entities.SupplierApplication
@{
    ViewData["Title"] = "تفاصيل طلب المورد";
}
<h1 class="mb-3">تفاصيل طلب المورد</h1>
<div class="card mb-3">
  <div class="card-body">
    <dl class="row mb-0">
      <dt class="col-sm-3">الاسم الظاهر</dt><dd class="col-sm-9">@Model.DisplayName</dd>
      <dt class="col-sm-3">الاسم الثلاثي</dt><dd class="col-sm-9">@Model.FullName</dd>
      <dt class="col-sm-3">الشركة/المحل</dt><dd class="col-sm-9">@Model.CompanyOrShopName</dd>
      <dt class="col-sm-3">الهاتف</dt><dd class="col-sm-9">@Model.PhoneWithCountry</dd>
      <dt class="col-sm-3">البريد</dt><dd class="col-sm-9">@Model.Email</dd>
      <dt class="col-sm-3">نوع الشركة</dt><dd class="col-sm-9">@Model.CompanyType</dd>
      <dt class="col-sm-3">مجال المنتجات</dt><dd class="col-sm-9">@Model.ProductScope</dd>
      <dt class="col-sm-3">مكان الإقامة</dt><dd class="col-sm-9">@Model.ResidenceLocation</dd>
      <dt class="col-sm-3">الموقع بالتحديد</dt><dd class="col-sm-9">@Model.ExactLocation</dd>
      <dt class="col-sm-3">الخطة</dt><dd class="col-sm-9">@Model.PlanType</dd>
      <dt class="col-sm-3">الحالة</dt><dd class="col-sm-9">@Model.Status</dd>
    </dl>
  </div>
</div>
<form method="post" asp-action="Approve" class="d-inline">
  <input type="hidden" name="id" value="@Model.Id" />
  <button type="submit" class="btn btn-success" @(Model.Status==Rain.Domain.Enums.SupplierApplicationStatus.Approved?"disabled":"")>موافقة ومنح صلاحيات المورد</button>
</form>
<form method="post" asp-action="Reject" class="d-inline ms-2">
  <input type="hidden" name="id" value="@Model.Id" />
  <input type="text" name="notes" class="form-control d-inline-block" style="width:260px" placeholder="سبب الرفض (اختياري)" />
  <button type="submit" class="btn btn-outline-danger ms-2">رفض</button>
</form>
<div class="mt-3">
  <a asp-action="Index" class="btn btn-link">عودة للقائمة</a>
</div>
